<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Contenedor principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@color/fondo_claro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PaginaPrincipal">

        <!-- LinearLayout contenedor principal -->
        <LinearLayout
            android:background="@color/fondo_claro"
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp">

            <!-- Sección de saludo al usuario -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/imageButtonMenu"
                    style="@style/imgColor"
                    android:layout_width="51dp"
                    android:layout_height="41dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@mipmap/menu"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textViewInicio"
                    style="@style/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="@string/paginaPrincipalInicio"
                    android:textColor="@color/black"
                    android:textSize="34sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- CardView contenedor para todas las tarjetas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:padding="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewConsultarHorario"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gris_claro"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"> <!-- Aquí cambiamos el fondo a gris claro -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewInfoPersonal"
                                style="@style/iconColor"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="10dp"
                                android:contentDescription="@string/todo"
                                app:srcCompat="@drawable/horarioa" />

                            <TextView
                                android:id="@+id/textViewInfoPersonal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:text="@string/consultarSusHorarios"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewConsultarReunion"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gris_claro"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"> <!-- Aquí también aplicamos el gris claro -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewNuevo1"
                                style="@style/iconColor"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="10dp"
                                android:contentDescription="@string/todo"
                                app:srcCompat="@drawable/consultarr" />

                            <TextView
                                android:id="@+id/textViewNuevo1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:text="@string/consutlarReuniones"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAlumnosProfe"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gris_claro"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"> <!-- Aquí también aplicamos el gris claro -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewNuevo2"
                                style="@style/iconColor"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="10dp"
                                android:contentDescription="@string/todo"
                                app:srcCompat="@drawable/crearr" />

                            <TextView
                                android:id="@+id/textViewNuevo2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:text="Alumnos del profe"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
