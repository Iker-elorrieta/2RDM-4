<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consultar_Horario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_claro"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra de navegación -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/fondo_claro">



                <Button
                    android:id="@+id/volver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atras"
                    android:textColor="@color/boton_texto"
                    android:background="@color/boton_fondo" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Selección de profesor -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Acceder a su horario"
                    android:textColor="@color/texto_normal" />

                <Button
                    android:id="@+id/btnSuHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Su horario"
                    android:textColor="@color/boton_texto"
                    android:background="@color/boton_fondo" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Selección de profesor -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Selecciona un profesor"
                    android:textColor="@color/texto_normal" />

                <Spinner
                    android:id="@+id/listaProfesores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceptar"
                    android:textColor="@color/boton_texto"
                    android:background="@color/boton_fondo" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Tabla de horarios -->
            <TableLayout
                android:id="@+id/tablaHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:padding="8dp">

                <!-- Encabezado de la tabla -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fondo_claro">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Hora"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Lunes"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Martes"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Miércoles"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Jueves"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/azul"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Viernes"
                        android:textColor="@android:color/white" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Leyenda"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tablaLeyenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            </TableLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>
